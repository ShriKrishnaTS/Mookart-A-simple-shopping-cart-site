
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" align="center">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :image %>
    <%= f.association :category %>
  </div>

  <div class="form-actions" align="center">
    <%= f.button :submit %>
  </div> 
<% end %>
