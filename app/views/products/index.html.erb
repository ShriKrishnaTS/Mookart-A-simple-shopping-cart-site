<p id="notice"><%= notice %></p>

<h1 align="center">Listing Products</h1><hr/>

<table bgcolor="white" color="grey">
  <thead>
    <tr>
      <th  width="15%">Name</th>
      <th  width="15%">Description</th>
      <th  width="15%">Price</th>
      <th  width="15%">Image</th>
      <th  width="20%">Category</th>
      <th  colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td width="15%" align="center"><%= product.name %></td>
        <td width="15%" align="center"><%= product.description %></td>
        <td width="15%" align="center"><%= product.price %></td>
        <td width="15%" align="center"><%= product.image %></td>
        <td width="20%" align="center"><%= product.category %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

